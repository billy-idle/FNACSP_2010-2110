<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="15 minutes">
    <!-- Don't forget to set "application.name" in application.yml or application.properties -->
    <!-- Appender to log to console in plain text format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                [%X{spanID}] ${PID} [%X{remoteAddress}] %d{ISO8601} %highlight(%-5level) [%blue(%t)] %yellow(%C{1}) %green(%M{1}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>
